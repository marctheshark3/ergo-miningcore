                }
            },
            "daemons": [
                {
                    "host": "host.docker.internal",
                    "port": 9053,
                    "user": "",
                    "password": "",
                    "ssl": false,
                    "extra": {
                        "apiKey": "your_api_key_here"
                    }
                }
            ],
            "paymentProcessing": {
                "enabled": true,
                "minimumPayment": 0.1,
                "payoutScheme": "SOLO",
                "payoutSchemeConfig": {},
                "extra": {
                    "walletPassword": "your_wallet_password_here",
                    "minimumConfirmations": 720
                }
            },
            "extra": {
                "maxActiveJobs": 12,
                "extraNonce1Size": 2
            }
        }
    ]
} 