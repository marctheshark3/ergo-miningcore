# Ergo Public Mining Pool Environment Configuration
# Copy this file to .env and configure your settings

# Pool Domain and SSL Configuration
POOL_DOMAIN=your-pool-domain.com
LETSENCRYPT_EMAIL=admin@your-pool-domain.com
USE_LETSENCRYPT=true
PFX_PASSWORD=your_secure_pfx_password_here

# Ergo Node Configuration
ERGO_NODE_HOST=host.docker.internal
ERGO_NODE_PORT=9053

# Database Configuration
POSTGRES_DB=miningcore
POSTGRES_USER=miningcore
POSTGRES_PASSWORD=changeme123_please_use_secure_password
POSTGRES_PORT=5432

# Web Interface Ports
HTTP_PORT=80
HTTPS_PORT=443

# Stratum Mining Ports
STRATUM_PORT_1=4444        # Low difficulty
STRATUM_PORT_2=5555        # Medium difficulty
STRATUM_SSL_PORT_1=7777    # High difficulty (SSL)
STRATUM_SSL_PORT_2=8888    # Very high difficulty (SSL)

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_USER=noreply@your-pool-domain.com
SMTP_PASSWORD=your_smtp_password
ADMIN_EMAIL=admin@your-pool-domain.com

# Pool Configuration
POOL_FEE_PERCENT=1.0
MINIMUM_PAYMENT=1.0
WALLET_PASSWORD=your_wallet_password_here

# Timezone
TZ=UTC

# Optional: API Rate Limiting
API_RATE_LIMIT=300

# Optional: Redis Configuration
REDIS_MAXMEMORY=512mb